<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/bg_marker_info_window"
        android:gravity="center_vertical"
        android:elevation="22dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:textColor="#000"/>
            <TextView
                android:id="@+id/tv_marker_info_driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Name"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duty at : "
                android:textColor="#000"/>
            <TextView
                android:id="@+id/tv_marker_info_driver_duty_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Institute Name"
                android:textColor="#000"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_marker_info_driver_arriving_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated Arrival Time : 10 mints"
            android:textColor="#000"/>
    </LinearLayout>

</LinearLayout>