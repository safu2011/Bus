<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="center_horizontal"
   >

    <ImageView
        android:id="@+id/iv_notification_hint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:src="@drawable/ss_aggresive_notification"
        android:background="@drawable/bg_notification_settings_hint"/>

    <TextView
        android:id="@+id/tv_notification_hint"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="Aggresive Notification"
        android:textColor="#000"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="16dp"
        />

</LinearLayout>