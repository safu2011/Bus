<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddNewDriverActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:clipToPadding="true"
    android:background="#efefef"
    android:animateLayoutChanges="true"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_assessment_questionnaires"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="10dp"
        >
        <TextView
            android:id="@+id/tv_app_bar_title_add_new_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:padding="@dimen/appbar_padding"
            android:text="Select Deiver"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/fragment_container_add_new_driver"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:background="#efefef">
    </FrameLayout>


    </RelativeLayout>